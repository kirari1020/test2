<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>
<body>
<h1>Books</h1>

<table>
  
    
      <th>Title</th>
      <th>Body</th>
    
     
        <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td> <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
        <% end %>
      </tr>
  
</table>

<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

   <% if @book.errors.any? %>
    <h3>errors</h3>
        <ul>
            <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  </br>
  <%= f.submit 'Create Book' %>

<% end %>
</body>
